<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.CustomerDao">
<!--    修改用户信息-->
    <update id="changeInfo" parameterType="Customer">
        update customer
        <set>
            <if test="cusName != null">
                cusName = #{cusName},
            </if>
            <if test="cusAddr != null">
                cusAddr = #{cusAddr},
            </if>
            <if test="cusTel != null">
                cusTel = #{cusTel},
            </if>
        </set>
        where cusId = #{cusId}
    </update>
<!--    根据cusId查询用户信息-->
    <select id="selectCusById" parameterType="String" resultType="Customer">
        select * from customer where cusId = #{cusId}
    </select>
</mapper>